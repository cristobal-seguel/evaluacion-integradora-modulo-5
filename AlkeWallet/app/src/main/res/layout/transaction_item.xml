<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewProfileTransaccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/yara_khalil_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ovalProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/oval"
        app:layout_constraintStart_toStartOf="@id/imageViewProfileTransaccion"
        app:layout_constraintTop_toTopOf="@id/imageViewProfileTransaccion"
        />

    <ImageView
        android:id="@+id/imageViewtipoTransaccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/send_icon_profile_svg"
        app:layout_constraintStart_toStartOf="@id/ovalProfile"
        app:layout_constraintTop_toTopOf="@id/ovalProfile"
        app:layout_constraintEnd_toEndOf="@id/ovalProfile"
        app:layout_constraintBottom_toBottomOf="@id/ovalProfile"/>

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/jua_regular"
        android:gravity="center_vertical"
        android:text="Yara Khalil"
        android:textColor="@color/dark_text"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewProfileTransaccion"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFecha"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="1dp"
        android:alpha="0.4"
        android:fontFamily="@font/jua_regular"
        android:gravity="center_vertical"
        android:text="Oct 14, 10:24 AM"
        android:textColor="@color/dark_text"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewProfileTransaccion"
        app:layout_constraintTop_toBottomOf="@+id/textViewNombre" />

    <TextView
        android:id="@+id/textViewAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/jua_regular"
        android:text="-$15.00"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>